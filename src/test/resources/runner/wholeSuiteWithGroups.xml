<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="POM Whole TestSuite" verbose="1">
    <test name="Whole Suite Tests">
        <groups>
            <run>
                <include name="high"></include>
                <include name="medium"></include>
                <exclude name="low"></exclude>
                <exclude name="the lowest"></exclude>
            </run>
        </groups>

        <classes>
            <class name="testcases.Assertions">
                <methods>
                    <include name="softAssertions"></include>
                    <include name="hardAssertions"></include>
                </methods>
            </class>
            <class name="testcases.ValidationTests"></class>
            <class name="testcases.DriverInteractions">
                <methods>
                    <include name="testCurrentUrl"></include>
                    <include name="testTitle"></include>
                    <include name="testOpenedTab"></include>
                    <include name="testJSscroll"></include>
                </methods>
            </class>
            <class name="testcases.DropdownTests"></class>
            <class name="testcases.LoginTests">
            </class>
        </classes>
    </test>

</suite>

